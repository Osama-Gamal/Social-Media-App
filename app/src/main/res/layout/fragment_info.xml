<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:background="#FF03A9F4"
	android:paddingBottom="65dp"
	android:elevation="10dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="55dp"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:background="#FFDADADA">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:background="@drawable/nav_background"
				android:orientation="vertical">

			</LinearLayout>

			<LinearLayout
				android:layout_width="140dp"
				android:layout_height="156dp"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:layout_marginBottom="4dp"
				android:background="@drawable/shape"
				android:elevation="10dp"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="6dp">

				<ImageView
					android:id="@+id/userImage"
					android:layout_width="78dp"
					android:layout_height="59dp"
					android:src="@drawable/user_profile" />

				<TextView
					android:id="@+id/nameEdit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:text="___________"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textColor="#FF000000"
					android:textSize="14sp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/changeName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="6dp"
					android:padding="4dp"
					android:text="تغيير الاسم"
					android:textColor="#FF11A0D2"
					android:textSize="12sp" />

				<TextView
					android:id="@+id/telegramTxt"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="2dp"
					android:gravity="center"
					android:singleLine="true"
					android:text="ادخل معرف حساب التيليجرام"
					android:textColor="#F32121"
					android:textSize="8sp"
					tools:visibility="visible" />

			</LinearLayout>

		</RelativeLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#FFDADADA"
			android:orientation="vertical"
			android:padding="10dp">

			<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools"
				android:id="@+id/cv_add"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_gravity="center_horizontal"
				app:cardBackgroundColor="#2ea67f"
				app:cardCornerRadius="6dp"
				app:cardElevation="3dp"
				app:cardUseCompatPadding="true">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#FFFFFFFF"
					android:gravity="center"
					android:orientation="horizontal"
					android:padding="5dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/email_profile" />

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:layout_weight="1.0"
						android:gravity="left|center_vertical"
						android:orientation="vertical">

						<TextView
							android:id="@+id/emailEdit"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="______________"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:textColor="#FF000000" />

					</LinearLayout>

				</LinearLayout>

			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools"
				android:id="@+id/changePass"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				app:cardBackgroundColor="#2ea67f"
				app:cardCornerRadius="6dp"
				app:cardElevation="3dp"
				app:cardUseCompatPadding="true">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#FFFFFFFF"
					android:gravity="center"
					android:orientation="horizontal"
					android:padding="5dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/lock" />

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:layout_weight="1.0"
						android:gravity="left|center_vertical"
						android:orientation="vertical">

						<TextView
							android:id="@+id/passEdit"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:inputType="textPassword"
							android:text="_________"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:textColor="#FF000000" />

					</LinearLayout>

				</LinearLayout>

			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools"
				android:id="@+id/cv_add"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				app:cardBackgroundColor="#2ea67f"
				app:cardCornerRadius="6dp"
				app:cardElevation="3dp"
				app:cardUseCompatPadding="true">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#FFFFFFFF"
					android:gravity="center"
					android:orientation="horizontal"
					android:padding="5dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/id_profile" />

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:layout_weight="1.0"
						android:gravity="left|center_vertical"
						android:orientation="vertical">

						<TextView
							android:id="@+id/qrEdit"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="______________"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:textColor="#FF000000" />

					</LinearLayout>

				</LinearLayout>

			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools"
				android:id="@+id/logout"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				app:cardBackgroundColor="#2ea67f"
				app:cardCornerRadius="6dp"
				app:cardElevation="3dp"
				app:cardUseCompatPadding="true">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#FFFFFFFF"
					android:gravity="center"
					android:orientation="horizontal"
					android:padding="5dp">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/logout" />

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:layout_weight="1.0"
						android:gravity="left|center_vertical"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="2dp"
							android:text="Logout"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:textColor="#FF000000" />

					</LinearLayout>

				</LinearLayout>

			</android.support.v7.widget.CardView>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

