<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/chat_backgroun460"
	android:paddingBottom="65dp"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1.0"
		android:orientation="vertical">

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recyclerChat"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="3dp">

		</android.support.v7.widget.RecyclerView>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/sound_place"
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:background="#FFF1F1F1"
		android:orientation="horizontal"
		android:padding="8dp">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@drawable/circle_button"
				android:orientation="vertical"
				android:padding="10dp">

				<ImageView
					android:id="@+id/sound_play"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/play_audio" />

			</LinearLayout>

			<TextView
				android:id="@+id/cancel_sound"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:gravity="center_horizontal"
				android:text="الغاء"
				android:textColor="#FFE21414" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="3dp">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:orientation="vertical">

					<TextView
						android:id="@+id/sound_name"
						android:layout_width="wrap_content"
						android:layout_height="17dp"
						android:singleLine="true"
						android:text="اسم المقطع"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:textColor="#FF000000"
						android:textSize="12sp" />

					<TextView
						android:id="@+id/sound_size"
						android:layout_width="wrap_content"
						android:layout_height="10dp"
						android:singleLine="true"
						android:text="55 mb"
						android:textColor="#FF000000"
						android:textSize="9sp" />

				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center"
					android:orientation="horizontal"
					android:padding="4dp">

					<TextView
						android:id="@+id/sound_startText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0.0"
						android:textColor="#FF000000"
						android:textSize="10sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="3dp"
						android:layout_marginRight="3dp"
						android:text="/"
						android:textColor="#FF000000"
						android:textSize="12sp" />

					<TextView
						android:id="@+id/sound_finalText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0.0"
						android:textColor="#FF000000"
						android:textSize="10sp" />

				</LinearLayout>

			</LinearLayout>

			<SeekBar
				android:id="@+id/sound_progress"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/pdf_chossed"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:background="#FFF1F1F1"
		android:orientation="horizontal"
		android:padding="8dp">

		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/pdf_icon" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
			android:layout_weight="1.0"
			android:orientation="vertical"
			android:padding="3dp">

			<TextView
				android:id="@+id/pdf_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:text="اسم المجلد"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#FF000000"
				android:textSize="12sp" />

			<TextView
				android:id="@+id/pdf_size"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:text="55 mb"
				android:textColor="#FF000000"
				android:textSize="9sp" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="30dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<TextView
				android:id="@+id/cancel_pdf"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:gravity="center_horizontal"
				android:text="الغاء"
				android:textColor="#FFE21414" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/image_place"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#5E000000"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="10dp">

		<TextView
			android:id="@+id/cancel_image"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:layout_marginBottom="4dp"
			android:gravity="center_horizontal"
			android:text="الغاء"
			android:textColor="#FFE21414" />

		<ImageView
			android:id="@+id/image_viewer"
			android:layout_width="wrap_content"
			android:layout_height="150dp"
			android:maxHeight="150dp"
			android:scaleType="fitCenter"
			android:src="@drawable/image_placeholder" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/media"
		android:layout_width="match_parent"
		android:layout_height="120dp"
		android:background="#5E000000"
		android:orientation="horizontal"
		android:padding="10dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/add_image_layout"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="5dp">

				<ImageView
					android:id="@+id/add_image"
					android:layout_width="43dp"
					android:layout_height="40dp"
					android:scaleType="centerCrop"
					android:src="@drawable/photo" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="3dp"
					android:text="صورة"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="#FF000000" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/add_sound_layout"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="5dp">

				<ImageView
					android:id="@+id/add_sound"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:scaleType="centerCrop"
					android:src="@drawable/add_sound" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="3dp"
					android:text="صوت"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="#FF000000" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/add_book_layout"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="5dp">

				<ImageView
					android:id="@+id/add_pdf"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:scaleType="centerCrop"
					android:src="@drawable/add_pdf" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="3dp"
					android:text="مجلد"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="#FF000000" />

			</LinearLayout>

			<TextView
				android:id="@+id/noticeText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:layout_weight="1"
				android:visibility="visible"
				android:text="قام أحد المشرفين باغلاق بعض خصائص المراسلات"
				android:textColor="#FA0000" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/layutControl"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_weight="0.0001"
		android:orientation="horizontal"
		android:padding="8dp">

		<LinearLayout
			android:id="@+id/layoutSend"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:background="@drawable/circle_button"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="10dp">

			<ImageView
				android:id="@+id/btnSend"
				android:layout_width="23dp"
				android:layout_height="23dp"
				android:adjustViewBounds="true"
				android:src="@drawable/send_btn"
				android:tint="#FFFFFF" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/layoutRecord"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="@drawable/circle_button"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="10dp">

			<ImageView
				android:id="@+id/voice_record"
				android:layout_width="25dp"
				android:layout_height="23dp"
				android:background="?attr/selectableItemBackgroundBorderless"

				android:src="@drawable/mice" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/layoutMedia"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:background="@drawable/circle_button"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="10dp">

			<ImageView
				android:id="@+id/add"
				android:layout_width="23dp"
				android:layout_height="20dp"
				android:adjustViewBounds="true"
				android:src="@drawable/media_btn" />

		</LinearLayout>

		<TextView
			android:id="@+id/chatTimeTxt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:foregroundTint="#000000"
			android:gravity="center"
			android:text="__"
			android:textColor="#000000"
			android:textStyle="bold"
			android:visibility="gone" />

		<EditText
			android:id="@+id/editWriteMessage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:background="@drawable/editbox_rec"
			android:ems="10"
			android:hint="اكتب رسالة"
			android:inputType="textMultiLine"
			android:maxHeight="70dp"
			android:minHeight="40dp"
			android:textColor="#000000"
			android:textSize="14sp" />

	</LinearLayout>

</LinearLayout>

