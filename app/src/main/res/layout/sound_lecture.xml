<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="5dp"
	android:layout_marginTop="5dp"
	android:layout_marginStart="5dp"
	android:layout_marginEnd="5dp"
	card_view:cardBackgroundColor="@color/colorCardView"
	card_view:cardCornerRadius="5dp"
	android:padding="8dp"
	android:minHeight="180dp">

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:padding="5dp"
		android:background="#FFFFFFFF">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="_________________"
			android:textColor="#FF000000"
			android:textSize="14sp"
			android:id="@+id/desLecture"
			android:autoLink="web"
			android:padding="7dp"/>

		<LinearLayout
			android:layout_height="70dp"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:background="#FFF1F1F1"
			android:padding="8dp"
			android:id="@+id/sound_place"
			android:layout_marginTop="4dp">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:padding="10dp"
				android:background="@drawable/circle_button">

				<ImageView
					android:layout_height="20dp"
					android:layout_width="20dp"
					android:src="@drawable/play_audio"
					android:id="@+id/sound_play"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:layout_weight="1.0">

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:padding="3dp">

					<LinearLayout
						android:layout_height="wrap_content"
						android:layout_width="30dp"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="17dp"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:text="اسم المقطع"
							android:textColor="#FF000000"
							android:id="@+id/sound_name"
							android:textSize="12sp"
							android:singleLine="true"
							android:visibility="invisible"/>

						<TextView
							android:layout_height="10dp"
							android:layout_width="wrap_content"
							android:text="55 mb"
							android:textColor="#FF000000"
							android:textSize="9sp"
							android:id="@+id/sound_size"
							android:singleLine="true"/>

					</LinearLayout>

					<LinearLayout
						android:layout_height="match_parent"
						android:layout_width="150dp"
						android:orientation="horizontal"
						android:gravity="left"
						android:padding="4dp"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp">

						<TextView
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="0.0"
							android:textColor="#FF000000"
							android:textSize="10sp"
							android:id="@+id/sound_startText"
							android:singleLine="true"
							android:gravity="center"/>

						<TextView
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="/"
							android:textSize="12sp"
							android:textColor="#FF000000"
							android:layout_marginLeft="3dp"
							android:layout_marginRight="3dp"
							android:gravity="center"/>

						<TextView
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="0.0"
							android:textColor="#FF000000"
							android:textSize="10sp"
							android:id="@+id/sound_finalText"
							android:singleLine="true"
							android:gravity="center"/>

					</LinearLayout>

				</LinearLayout>

				<SeekBar
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:id="@+id/sound_progress"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="50dp"
				android:orientation="vertical"
				android:gravity="center"
				android:layout_marginRight="2dp">

				<ImageView
					android:layout_height="23dp"
					android:layout_width="23dp"
					android:src="@drawable/download_btn"
					android:id="@+id/download_btn"/>

			</LinearLayout>

		</LinearLayout>

		<ImageView
			android:id="@+id/imgView_line"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:layout_below="@+id/rellay2"
			android:layout_marginTop="10dp"
			android:background="@color/light_grey"/>

		<LinearLayout
			android:id="@+id/rellay1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="10dp">

			<ImageView
				android:id="@+id/blog_user_image"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter"
				android:src="@drawable/image_placeholder"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="10dp"
				android:layout_toRightOf="@+id/blog_user_image"
				android:orientation="vertical"
				android:layout_marginRight="10dp"
				android:layout_weight="1.0">

				<TextView
					android:id="@+id/blog_user_namee"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="sans-serif-medium"
					android:text="ــــــــــــ"
					android:textColor="@color/black"
					android:textSize="13sp"
					android:textStyle="bold"/>

				<TextView
					android:id="@+id/date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="sans-serif"
					android:text="ــــــــ"
					android:textColor="@color/grey"
					android:textSize="10sp"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:gravity="center"
				android:padding="8dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="___"
					android:id="@+id/titleTxt"
					android:textColor="#FF0E91DB"
					android:textSize="12sp"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:orientation="horizontal"
				android:gravity="center"
				android:layout_weight="0.1">

				<ImageView
					android:layout_height="20dp"
					android:layout_width="20dp"
					android:src="@drawable/eye"
					android:alpha="0.4"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="0"
					android:textColor="#FF838383"
					android:textSize="11sp"
					android:gravity="top"
					android:id="@+id/Seen_num"/>

			</LinearLayout>
			<ImageView
				android:id="@+id/moreImage"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_weight="0.0000000001"
				card_view:srcCompat="@drawable/more" />

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:visibility="gone">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Small Text"
				android:textColor="#FF000000"
				android:id="@+id/Link"
				android:visibility="gone"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Small Text"
				android:textColor="#FF000000"
				android:id="@+id/ID"
				android:visibility="gone"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Small Text"
				android:textColor="#FF000000"
				android:id="@+id/UserID"
				android:visibility="gone"/>

		</LinearLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>

