<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#DFDFDF">

	<LinearLayout
		android:layout_height="300dp"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:gravity="right">

		<ImageView
			android:layout_height="160dp"
			android:layout_width="match_parent"
			android:src="@android:drawable/ic_delete"
			android:background="#FFFFFF"
			android:elevation="5dp"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:padding="5dp"
			android:gravity="right"
			android:background="#FFFFFF"
			android:elevation="5dp">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="85dp"
				android:orientation="horizontal"
				android:gravity="center">

				<ImageView
					android:layout_height="30dp"
					android:layout_width="30dp"
					android:src="@drawable/ic_notify_group"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="5167"
					android:textColor="#000000"
					android:padding="3dp"
					android:layout_weight="1.0"
					android:gravity="center"
					android:textSize="13sp"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="85dp"
				android:orientation="horizontal"
				android:gravity="center">

				<ImageView
					android:layout_height="30dp"
					android:layout_width="30dp"
					android:src="@drawable/ic_notify_group"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="624"
					android:textColor="#000000"
					android:padding="3dp"
					android:layout_weight="1.0"
					android:gravity="center"
					android:textSize="13sp"/>

			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="أ : احمد يحي"
				android:textColor="#000000"
				android:padding="3dp"
				android:layout_weight="1.0"/>

			<ImageView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:src="@android:drawable/ic_delete"/>

		</LinearLayout>

		<ScrollView
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:background="#7C5653"
			android:padding="10dp">

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:background="#FFFFFF"
				android:gravity="right"
				android:padding="21dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="الحصة الخامسة | درس المعدلات الزمنية المراجعة الشاملة والحزئية"
					android:textColor="#000000"
					android:elevation="1dp"
					android:background="#FFFFFF"
					android:padding="5dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="الحصة الخامسة للمراجعة علي درس التفاضل والتكامل (المعدلات الزمنية) المراجعه جزئية وشاملة متاحه الان مع ملفات ال pdf من كتاب الامتحان والمعاصر"
					android:textColor="#000000"
					android:padding="3dp"/>

			</LinearLayout>

		</ScrollView>

	</LinearLayout>

</LinearLayout>

