<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:minHeight="180dp"
    android:padding="8dp"
    card_view:cardBackgroundColor="@color/colorCardView"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/desLecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:padding="7dp"
            android:text="_________________"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FF000000"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/sound_place"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="4dp"
            android:background="#FFF1F1F1"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_button"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/sound_play"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/play_audio" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sound_name"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:singleLine="true"
                            android:text="اسم المقطع"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#FF000000"
                            android:textSize="12sp"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/sound_size"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:singleLine="true"
                            android:textColor="#FF000000"
                            android:textSize="9sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/sound_startText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="0.0"
                            android:textColor="#FF000000"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:gravity="center"
                            android:text="/"
                            android:textColor="#FF000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/sound_finalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="0.0"
                            android:textColor="#FF000000"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

                <SeekBar
                    android:id="@+id/sound_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/download_btn"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/download_btn" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/Link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FF000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FF000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/UserID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FF000000"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

